@model ProductCatalog.Models.Categorys
@{
    ViewBag.Title = "Удаление категории";
}

<div>
    <dl class="dl-horizontal">
        <dt>Категория</dt>
        <dd>
            @Html.DisplayFor(model => model.Category)
        </dd>

    <div>
        <form asp-controller="Home" asp-action="DeleteCat" method="post">
            <div class="form-group">
                <input type="submit" class="btn btn-default" value="Удалить" />
            </div>
        </form>
    </div>
</div>