@model ProductCatalog.Models.Products
@{
    ViewBag.Title = "Удаление продукта";
}

<div>
    <dl class="dl-horizontal">
        <dt>Продукт</dt>
        <dd>
            @Html.DisplayFor(model => model.product)
        </dd>

        <dt>Описание</dt>
        <dd>
            @Html.DisplayFor(model => model.description)
        </dd>
        </dl>


        <div>
            <form asp-controller="Home" asp-action="DeleteProd" method="post">
                <div class="form-group">
                    <input type="submit" class="btn btn-default" value="Удалить" />
                </div>
            </form>
        </div>
</div>